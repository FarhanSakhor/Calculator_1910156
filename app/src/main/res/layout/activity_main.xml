<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/solutionText"
        android:text="0"
        android:textSize="60dp"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultText"
        android:text="0"
        android:textSize="80dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:layout_margin="20dp"
        android:layout_above="@+id/button_container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_container">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/red"
                android:text="C"
                android:textSize="35sp" />
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="@color/cyan"
                android:layout_margin="13dp"
                android:text="("
                android:textSize="35sp"
                android:id="@+id/butLeftPar"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text=")"
                android:textSize="35sp"
                android:id="@+id/butRightPar"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/red"
                android:text="D"
                android:textSize="35sp"
                android:id="@+id/butD"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="1"
                android:textSize="35sp" />
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="@color/cyan"
                android:layout_margin="13dp"
                android:text="2"
                android:textSize="35sp"
                android:id="@+id/but2"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="3"
                android:textSize="35sp"
                android:id="@+id/but3"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/banana"
                android:text="+"
                android:textSize="35sp"
                android:id="@+id/butPlus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="4"
                android:textSize="35sp" />
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="@color/cyan"
                android:layout_margin="13dp"
                android:text="5"
                android:textSize="35sp"
                android:id="@+id/but5"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="6"
                android:textSize="35sp"
                android:id="@+id/but6"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/banana"
                android:text="-"
                android:textSize="35sp"
                android:id="@+id/butMinus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="7"
                android:textSize="35sp" />
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="@color/cyan"
                android:layout_margin="13dp"
                android:text="8"
                android:textSize="35sp"
                android:id="@+id/but8"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="9"
                android:textSize="35sp"
                android:id="@+id/but9"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/banana"
                android:text="ร"
                android:textSize="35sp"
                android:id="@+id/butMultiply"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butEqual"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/vegetable"
                android:text="="
                android:textSize="35sp" />
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="@color/cyan"
                android:layout_margin="13dp"
                android:text="0"
                android:textSize="35sp"
                android:id="@+id/but0"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/cyan"
                android:text="."
                android:textSize="35sp"
                android:id="@+id/butDot"/>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:backgroundTint="@color/banana"
                android:text="รท"
                android:textSize="35sp"
                android:id="@+id/butDivision"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>